@model SegurosChubbi.Models.Seguro

@{
    ViewData["Title"] = "Agregar Seguro";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SegurosChubbi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9f5e0; /* Fondo verde claro */
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff; /* Fondo blanco para el contenedor */
            border-radius: 8px; /* Bordes redondeados */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        }

        h2 {
            color: #2b5d2b; /* Verde oscuro para el título */
            margin-bottom: 20px; /* Espacio debajo del título */
        }

        .form-group label {
            color: #2b5d2b; /* Verde oscuro para las etiquetas */
        }

        .form-control {
            border-color: #c0d6c1; /* Verde muy claro para los bordes */
        }

        .btn-primary {
            background-color: #4caf50; /* Verde para el botón de guardar */
            border-color: #4caf50;
        }

            .btn-primary:hover {
                background-color: #388e3c; /* Verde más oscuro al pasar el ratón */
                border-color: #388e3c;
            }

        .text-danger {
            color: #dc3545; /* Rojo para los mensajes de error */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumaAsegurada" class="control-label"></label>
                <input asp-for="SumaAsegurada" class="form-control" />
                <span asp-validation-for="SumaAsegurada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prima" class="control-label"></label>
                <input asp-for="Prima" class="form-control" />
                <span asp-validation-for="Prima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>
