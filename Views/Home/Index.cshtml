@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SegurosChubbi</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-MV6LuL2T1jXjFbB5sgmnf8yPrHo6F+2LWd+kSn3c1L1QKYdIb7wI4Wlwz9eBf2iX" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2; /* Gris claro */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 30px;
            background-color: #ffffff; /* Blanco para el contenedor */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .text-center {
            text-align: center;
        }

        h1.display-4 {
            font-size: 2.5rem;
            color: #4a5d23; /* Verde oliva oscuro */
            margin-bottom: 1rem;
        }

        h2.mt-5 {
            margin-top: 3rem;
            font-size: 2rem;
            color: #6b8e23; /* Verde oliva */
        }

        .lead {
            font-size: 1.25rem;
            font-weight: 300;
            color: #606c38; /* Verde oliva claro */
        }

        a {
            color: #4a5d23; /* Verde oliva oscuro */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            background-color: #e9f0e3; /* Verde oliva muy claro para el fondo del input */
        }

        .btn-primary {
            color: #fff;
            background-color: #4a5d23; /* Verde oliva oscuro */
            border-color: #4a5d23;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #3a4a1e; /* Verde oliva más oscuro */
                border-color: #2e3b15;
            }

        .mt-3 {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="display-4">Bienvenidos a SegurosChubbi</h1>

        <h2 class="mt-5">Consultar Seguros o Asegurados</h2>

        <form asp-action="Consultar" method="get" class="mt-3">
            <div class="form-group">
                <label for="cedula">Cédula:</label>
                <input type="text" name="cedula" id="cedula" class="form-control" placeholder="Ingrese la cédula" />
            </div>
            <div class="form-group">
                <label for="codigoSeguro">Código del Seguro:</label>
                <input type="text" name="codigoSeguro" id="codigoSeguro" class="form-control" placeholder="Ingrese el código del seguro" />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Consultar</button>
        </form>

        <div class="mt-4">
            <a asp-controller="Seguro" asp-action="Index" class="btn btn-primary">Ver Seguros</a>
            <a asp-controller="Asegurado" asp-action="Index" class="btn btn-primary">Ver Asegurados</a>
        </div>
    </div>
</body>
</html>
